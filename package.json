{
  "name": "tennis-club-reservation",
  "version": "1.0.0",
  "description": "Tennis Club Court Reservation System",
  "scripts": {
    "build:css": "tailwindcss -i ./app/static/css/styles.css -o ./app/static/css/output.css --minify",
    "watch:css": "tailwindcss -i ./app/static/css/styles.css -o ./app/static/css/output.css --watch",
    "lint": "eslint app/static/js/",
    "lint:fix": "eslint app/static/js/ --fix",
    "format": "prettier --write app/static/js/",
    "format:check": "prettier --check app/static/js/",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:e2e"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitest/ui": "^4.0.15",
    "cypress": "^13.17.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "prettier": "^3.4.0",
    "tailwindcss": "^3.3.0",
    "vitest": "^4.0.15"
  }
}
